{
  "name": "@taskml/core",
  "version": "0.1.0",
  "description": "TaskML parser and renderer - Core TypeScript library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "taskml",
    "parser",
    "ai-agents",
    "task-management",
    "visualization"
  ],
  "author": "Yuval Suede",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuvalsuede/taskml.git",
    "directory": "packages/core"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.17"
  }
}
